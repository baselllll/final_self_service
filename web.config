<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Redirect to public/index.php" stopProcessing="true">
                    <match url="^$" />
                    <action type="Redirect" url="/public/index.php" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
